{
    "require-dev": {
        "phpunit/phpunit": "^4.8.36",
        "vinnyfs89/x-dump": "dev-master",
        "vinnyfs89/r-enc": "dev-master",
        "squizlabs/php_codesniffer": "*"
    },
    "require": {
        "opauth/opauth": ">=0.2.0",
        "aferrandini/phpqrcode": "1.0.1",
        "zendframework/zendframework1": "1.*",
        "sentry/sentry": "^1.8"
    },
    "autoload" : {
        "psr-4" : {
            "Application\\": "application/",
            "Application\\Modules\\": "application/modules/",
            "Application\\Modules\\Readequacao\\": "application/modules/readequacao/",
            "Application\\Modules\\Readequacao\\Service\\": "application/modules/readequacao/service/",
            "Application\\Modules\\Readequacao\\Service\\Assinatura\\": "application/modules/readequacao/service/Assinatura",
            "MinC\\Assinatura\\Servico\\": "library/MinC/Assinatura/"
        }
    },
    "archive": {
        "exclude": ["/demos", "/documentation", "/tests"]
    },
    "config": {
        "platform": {
            "php": "7.0"
        }
    },
    "before_script" : {
        "flags":"--prefer-dist"
    }
}
