                    && this.comprovante.fornecedor.CNPJCPF.value.length == 11) {
                    return this.comprovante.fornecedor.CNPJCPF.value.replace(/(\d{3})(\d{3})(\d{3})(\d{2})/,"$1.$2.$3-$4")
                } else if(this.comprovante.fornecedor.tipoPessoa == 2
                    && this.comprovante.fornecedor.CNPJCPF.value.length == 14) {
                    return this.comprovante.fornecedor.CNPJCPF.value.replace(/(\d{2})(\d{3})(\d{3})(\d{4})(\d{2})/,"$1.$2.$3/$4-$5")
