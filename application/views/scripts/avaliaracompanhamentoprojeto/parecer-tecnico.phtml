                    height:160,
                    modal: true,
                    buttons : {
                        'OK' : function(){
                            $(this).dialog('close');
                        }
                    }
                });
	    valido = false;
	}
        return valido;
    }
   
   function SalvarFormulario(){
       var valido = Validacao();
       if (valido == true){
           $('#formParecer').submit();	
       }
      return;
   }
   
   function EnviarFormulario(){
       var valido = Validacao();
       if (valido == true){
           $('#btn_finalizar').click(function(){
            var preenchimento = true,
                campoRadioMarcado = false;
            $('.obrigatorio').each(function(){
                if($.trim($(this).val()) == '')
                    preenchimento = false;
            });

            $('input:radio').each(function(){
                if($(this).attr('checked'))
                    campoRadioMarcado = true;
            });

            if(!preenchimento || !campoRadioMarcado) {
                $("#camposObrigatorios").dialog("destroy");
                $("#camposObrigatorios").html("Favor preencher o campo obrig&aacute;torio!");
                $("#camposObrigatorios").dialog({
                    resizable: false,
                    title: 'Alerta!',
                    width:320,
                    height:160,
                    modal: true,
                    buttons : {
                        'OK' : function(){
                            $(this).dialog('close');
                        }
                    }
                });
                $('.ui-dialog-titlebar-close').remove();
            } else {
                $("#camposObrigatorios").dialog("destroy");
                $("#camposObrigatorios").html("Deseja realmente finalizar?");
                $("#camposObrigatorios").dialog({
                    resizable: false,
                    title: 'Alerta!',
                    width:320,
                    height:160,
                    modal: true,
                    buttons : {
                        'Não' : function(){
                            $(this).dialog('close');
                        },
                        'Sim' : function(){
                            $(this).dialog('close');
                            $('#formParecer').append('<input type="hidden" name="finalizar" value="1" />');
                            $('#formParecer').submit();
                        }
                    }
                });
                $('.ui-dialog-titlebar-close').remove();
            }
         });

       }
   }

</script>


