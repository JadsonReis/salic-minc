    function CountCharacters(contador) {
        var body = tinymce.get(contador).getBody();
        var content = tinymce.trim(body.innerText || body.textContent);
        return content.length;
    };

    function Validacao(valido) {
        var max7500 = 7500;
	var max950= 950;
	var valido = true;  

        var count = CountCharacters("informacaoAdicional");
	var count2= CountCharacters("orientacao");
	var count3= CountCharacters("conclusao");
 
        if (count > max7500) {
	     $("#camposObrigatorios").dialog("destroy");
                $("#camposObrigatorios").html("Você ultrapassou o número de caracteres no campo Considerações!");
                $("#camposObrigatorios").dialog({
                    resizable: false,
                    title: 'Alerta!',
                    width:320,
                    height:160,
                    modal: true,
                    buttons : {
                        'OK' : function(){
                            $(this).dialog('close');
                        }
                    }
                });
                $('.ui-dialog-titlebar-close').remove();
            valido = false;
	}
	if (count2 > max950) {
	     $("#camposObrigatorios").dialog("destroy");
                $("#camposObrigatorios").html("Você ultrapassou o número de caracteres no campo Recomendações!");
                $("#camposObrigatorios").dialog({
                    resizable: false,
                    title: 'Alerta!',
                    width:320,
                    height:160,
                    modal: true,
                    buttons : {
                        'OK' : function(){
                            $(this).dialog('close');
                        }
                    }
                });
	    valido = false;
	}
	if (count3 > max950) {
	    $("#camposObrigatorios").dialog("destroy");
                $("#camposObrigatorios").html("Você ultrapassou o número de caracteres no campo Conclusão!");
                $("#camposObrigatorios").dialog({
